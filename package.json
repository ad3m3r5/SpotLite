{
  "name": "SpotLite",
  "description": "Lightweight Spotify client using React and Electron",
  "author": "ad3m3r5",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "productName": "SpotLite",
    "electronDist": "../electron-wvmp",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "build/logo.ico"
    },
    "mac": {
      "icon": "build/logo.icns"
    }
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && NODE_ENV=true electron .\"",
    "electron-run": "cross-env NODE_ENV=dev electron .",
    "electron-build-win": "cross-env electron-builder build --win -c.extraMetadata.main=build/electron.js --publish=never",
    "electron-build-mac": "cross-env electron-builder build --mac -c.extraMetadata.main=build/electron.js --publish=never",
    "electron-build-linux": "cross-env electron-builder build --linux -c.extraMetadata.main=build/electron.js --publish=never",
    "electron-build-all": "cross-env electron-builder build --wml -c.extraMetadata.main=build/electron.js --publish=never"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.0",
    "@material-ui/icons": "^4.5.1",
    "axios": "^0.19.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "styled-components": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "electron": "https://github.com/castlabs/electron-releases#v8.0.0-wvvmp",
    "electron-builder": "^22.3.2",
    "react-scripts": "^3.3.0",
    "wait-on": "^4.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
